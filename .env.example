# TechJobs360 Scraper - Environment Configuration
# Copy this file to .env and fill in your values

# WordPress Configuration
# Use http://127.0.0.1 for localhost (bypasses QUIC.cloud)
# Or use your domain: https://techjobs360.com
WP_URL=http://127.0.0.1
WP_USERNAME=your-wordpress-username
WP_APP_PASSWORD=xxxx xxxx xxxx xxxx

# Optional: JSearch API Key (for RapidAPI)
# Get it from: https://rapidapi.com/letscrape-6bRBa3QguO5/api/jsearch/
JSEARCH_API_KEY=

# Auto-rotation (rotates continents by weekday)
# Monday=Asia, Tuesday=Europe, Wednesday=Africa, Thursday=North America, Friday=South America, Saturday=Oceania, Sunday=Asia
AUTO_ROTATE=true

# Optional: Process specific continent only
# Values: asia, europe, africa, north_america, south_america, oceania
# Leave empty to process all (or use AUTO_ROTATE)
PROCESS_CONTINENT=
